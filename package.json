{
  "name": "sveltekittemplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint:style": "stylelint '**/*.{css,postcss,svelte}'",
    "lint:es": "eslint .",
    "lint:prettier": "prettier --cache --plugin-search-dir=. --check .",
    "lint": " pnpm lint:prettier; pnpm lint:es; pnpm lint:style",
    "format:style": "stylelint --fix '**/*.{css,postcss,svelte}'",
    "format:es": "eslint --fix",
    "format:prettier": "prettier --cache --plugin-search-dir=. --write .",
    "format": "pnpm format:prettier; pnpm format:es; pnpm format:style"
  },
  "devDependencies": {
    "@jothsa/stylelint-config": "^0.0.3",
    "@playwright/test": "^1.35.1",
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.21.0",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte": "^2.32.0",
    "postcss-preset-env": "^8.5.1",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "stylelint": "^15.9.0",
    "svelte": "^4.0.1",
    "svelte-check": "^3.4.4",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vitest": "^0.32.2"
  },
  "type": "module"
}

{
  "name": "sveltekittemplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint:style": "stylelint '**/*.{css,postcss,svelte}'",
    "lint:es": "eslint .",
    "lint:prettier": "prettier --cache --check .",
    "lint": " pnpm lint:prettier; pnpm lint:es; pnpm lint:style",
    "format:style": "stylelint --fix '**/*.{css,postcss,svelte}'",
    "format:es": "eslint --fix",
    "format:prettier": "prettier --cache --write .",
    "format": "pnpm format:prettier; pnpm format:es; pnpm format:style"
  },
  "devDependencies": {
    "@jothsa/stylelint-config": "^0.0.3",
    "@playwright/test": "^1.37.1",
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.24.1",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.33.0",
    "postcss-preset-env": "^9.1.3",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "stylelint": "^15.10.3",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "type": "module"
}
